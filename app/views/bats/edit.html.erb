<div class="container-fluid">

  <h3>Update <%= @bat.name %></h3>
  <%= image_tag("https://bearheartsbat.files.wordpress.com/2016/05/12063517_10102203072926058_5158477717912773411_n.jpg", height: '200') %>
  <form class="col col-sm-5">
  <%= form_for @bat do |f| %>
  <div class="form-group">
    <label for="Name">Name:</label>
  	<%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <label for="Description">Description:</label>
  	<%= f.text_area :description, :class => "form-control" %>
  </div>
  	<%= button_to "Update", @bat, method: :update, :class => "btn btn-default" %>
  </form>
  <% end %>
</div>
