<div class="container-fluid">

  <h3>Add A New Bat</h3>
  <%= image_tag("https://bearheartsbat.files.wordpress.com/2016/05/12063517_10102203072926058_5158477717912773411_n.jpg", height: '200') %>
  <div class="col col-sm-5">
  <%= form_for @bat do |f| %>
  <div class="form-group">
    <label for="Name">Name:</label>
  	<%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
  </div>
  <div class="form-group">
    <label for="Description">Description:</label>
  	<%= f.text_area :description, class: "form-control", placeholder: "Description" %>
  </div>
  	<%= f.submit "submit", class: "btn btn-block btn-default" %>
  </div>
</div>
<% end %>
